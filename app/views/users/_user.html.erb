<div class="text-center ">
    <p class="mb-3 fw-bold fs-4"><%= user.name%></p>
     <div class="mb-2">
        <%= image_tag(user.icon, size: "150x150", class: "rounded-circle" ) if user.icon.attached? %>
     </div>
     <p class="text-small"><%= link_to user.following.count, followings_user_path(user)%>フォロー <%= link_to user.followers.count, followers_user_path(user)%>フォロワー</p>
    <p class="links-style d-inline"><%= link_to "Show", user_path(user) %></p>
    <% if user != current_user%>
        <% if user.is_followed_by?(current_user)%>
        <%= button_to "フォロー解除", user_relationships_path(user), method: :delete, class:"btn btn-danger", params:{user_id: user.id}%>
        <% else %>
        <%= button_to "フォロー", user_relationships_path(user), method: :post, class:"btn btn-primary", params:{user_id: user.id}%>
        <% end %>
    <% end %>
</div>
