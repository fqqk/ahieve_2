<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <h1>FOLLOWERS</h1>
      <table class="table text-center">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                  <% if user.is_followed_by?(current_user) %>
                     <% if user.is_followed_by?(current_user) %>
                       <%= button_to "フォロー解除", user_relationships_path(user), method: :delete, class:"btn btn-danger"%>
                     <% else %>
                       <%= button_to "フォロー", user_relationships_path(user), method: :post, class:"btn btn-primary"%>
                     <% end %>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>