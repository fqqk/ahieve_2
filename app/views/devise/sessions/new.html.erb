<div class="body-y-margin container w-75">
  <h2 class="fw-bold text-center">Log in</h2>
  <div class="w-50 m-auto mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="text-center">
            <div class="field form-item">
              <%= f.label :email, class:"form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-50 d-inline-block" %>
            </div>
            <div class="field form-item">
              <%= f.label :password, class:"form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control w-50 d-inline-block" %>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class:"fs-6" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-primary" %>
            </div>
          </div>
       <% end %>
      <div class="d-inline-block mt-5">
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
