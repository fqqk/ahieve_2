<div class="body-y-margin container w-75">
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="fw-bold text-center">Sign up</h2>
  <div class="w-50 m-auto mt-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="text-center">
            <div class="field form-item">
              <%= f.label :email, class:"form-label" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-50 d-inline-block" %>
            </div>
            <div class="field form-item">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control w-50 d-inline-block" %>
            </div>
            <div class="field form-item">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control w-50 d-inline-block" %>
             </div>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <div class="d-inline-block">
             <%= render "devise/shared/links" %>
            </div>
            <div class="actions">
              <%= f.submit "Sign up", class:"btn btn-primary" %>
            </div>
          </div>
       <% end %>
  </div>
</div>
