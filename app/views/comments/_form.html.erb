<%= form_for(comment, url: blog_comment_url, data: { turbo: false }) do |form| %>
  <div class="form-item">
    <%= form.label :comment, class:"form-label" %>
    <%= form.text_area :comment, class:"form-control",rows:"3" %>
  </div>

  <div class="float-end">
      <%= form.submit button_text, class:"btn btn-primary" %>
  </div>
<% end %>
