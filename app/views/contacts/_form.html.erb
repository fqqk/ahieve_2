<%= form_for(contact, url: confirm_path,data: { turbo: false }) do |form| %>

  <% if contact.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <%= pluralize(contact.errors.count, "error") %> prohibited this blog from being saved:
      </div>
      <div class="text-danger">
      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-item">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name,class:"form-control w-50" %>
  </div>

  <div  class="form-item">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email,class:"form-control w-50",placeholder:"example@email.com" %>
  </div>

  <div class="form-item">
    <%= form.label :category, class: "form-label" %>
    <div class="d-flex">
      <div class="m-3">
        <%= form.radio_button :category, :achieve, class:"form-check-input" %>
        <%= form.label :category, "Achieve", {value: :achieve,class:"form-option-label"} %>
      </div>
      <div class="m-3">
        <%= form.radio_button :category, :text, class:"form-check-input" %>
        <%= form.label :category, "テキスト", {value: :text,class:"form-option-label"} %>
      </div>
    </div>
    <div class="d-flex">
      <div class="m-3">
        <%= form.radio_button :category, :briefing, class:"form-check-input" %>
        <%= form.label :category, "説明会", {value: :briefing,class:"form-option-label"} %>
      </div>
      <div class="m-3">
        <%= form.radio_button :category, :other, class:"form-check-input" %>
        <%= form.label :category, "その他", {value: :other,class:"form-option-label"} %>
      </div>
    </div>
  </div>

  <div  class="form-item">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class:"form-control",rows:"3" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit '入力内容確認', class:"btn btn-primary" %>
  </div>


<% end %>
