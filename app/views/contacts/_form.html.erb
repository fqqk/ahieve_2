<%= form_for(contact, url: confirm_path,data: { turbo: false }) do |form| %>

<% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.radio_button :category, :achieve %>
    <%= form.label :category, "Achieve", {value: :achieve, style: "display: inline-block;"} %>
    <%= form.radio_button :category, :text %>
    <%= form.label :category, "テキスト", {value: :text, style: "display: inline-block;"} %>
  </div>
  <div>
   <%= form.radio_button :category, :briefing %>
    <%= form.label :category, "説明会", {value: :briefing, style: "display: inline-block;"} %>
    <%= form.radio_button :category, :other %>
    <%= form.label :category, "その他", {value: :other, style: "display: inline-block;"} %>
  </div>

  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit '入力内容確認',class:"btn btn-default" %>
  </div>


